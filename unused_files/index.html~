  <script> function toggleAccordion(header) { const body = header.nextElementSibling; const allBodies = document.querySelectorAll('.accordion-body'); allBodies.forEach(section => { if (section !== body) section.classList.remove('open'); }); body.classList.toggle('open'); } document.getElementById('open-paypal-modal').addEventListener('click', () => { const modal = document.getElementById('paypal-modal'); modal.style.display = 'flex'; paypal.HostedButtons({ hostedButtonId: "H4Y8CJZL7NDNG", }).render('#paypal-container-modal'); }); document.getElementById('close-modal').addEventListener('click', () => { const modal = document.getElementById('paypal-modal'); modal.style.display = 'none'; }); window.addEventListener('click', event => { const modal = document.getElementById('paypal-modal'); if (event.target === modal) { modal.style.display = 'none'; } }); function copyBtcAddress() { const btcAddress = document.getElementById('btc-address').textContent; navigator.clipboard.writeText(btcAddress).then(() => { const copyBtn = document.querySelector('#btc-address + button'); if (copyBtn) { copyBtn.innerHTML = '<span class="material-icons" style="color: #00FFA3; font-size: 1rem;">done</span>'; setTimeout(() => { copyBtn.innerHTML = '<span class="material-icons" style="color: #00D6FF; font-size: 1rem;">content_copy</span>'; }, 2000); } }); } gsap.from(".gsap-title", { duration: 2, opacity: 0, y: -30, ease: "elastic.out(1, 0.5)" }); gsap.utils.toArray(".accordion-item").forEach((item, i) => { gsap.from(item, { opacity: 0, y: gsap.utils.random(20, 50), delay: i * 0.2, duration: gsap.utils.random(0.8, 1.2), ease: "power4.out", rotation: gsap.utils.random(-5, 5), scale: gsap.utils.random(0.95, 1.05) }); }); </script>
